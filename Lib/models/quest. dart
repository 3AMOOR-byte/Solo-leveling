class Quest {
  String id;
  String title;
  String description;
  int rewardXP;
  bool isCompleted;
  bool isBossGate;
  String? monsterName;

  Quest({
    required this.id,
    required this.title,
    required this.description,
    required this.rewardXP,
    this.isCompleted = false,
    this.isBossGate = false,
    this.monsterName,
  });

  void complete() {
    isCompleted = true;
  }
}
