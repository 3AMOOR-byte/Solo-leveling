import 'item.dart';

class Player {
  String name;
  int level;
  int hp;
  int maxHp;
  int strength;
  List<Item> inventory;

  // Singleton player example
  static final Player instance = Player._internal();

  Player._internal()
      : name = 'Player',
        level = 1,
        hp = 100,
        maxHp = 100,
        strength = 10,
        inventory = [];

  void heal(int amount) {
    hp += amount;
    if (hp > maxHp) hp = maxHp;
  }

  void useItem(Item item) {
    switch (item.effect) {
      case 'heal':
        heal(item.power);
        break;
      case 'damage_boost':
        // Implement damage boost effect here if needed
        break;
      // Add other effects if needed
      default:
        break;
    }
    inventory.remove(item);
  }
}
