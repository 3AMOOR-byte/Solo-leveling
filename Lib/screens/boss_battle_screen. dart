import 'package:flutter/material.dart';

class BossBattleScreen extends StatelessWidget { final String bossName; final int bossHp; final int playerStrength; final VoidCallback onVictory;

const BossBattleScreen({ Key? key, required this.bossName, required this.bossHp, required this.playerStrength, required this.onVictory, }) : super(key: key);

@override Widget build(BuildContext context) { int currentBossHp = bossHp;

return Scaffold(
  appBar: AppBar(
    title: Text('Battle vs $bossName'),
    backgroundColor: Colors.black,
  ),
  backgroundColor: Colors.grey[900],
  body: StatefulBuilder(
    builder: (context, setState) {
      return Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              '$bossName HP: $currentBossHp',
              style: TextStyle(color: Colors.red, fontSize: 22),
            ),
            SizedBox(height: 40),
            ElevatedButton(
              onPressed: () {
                setState(() {
                  currentBossHp -= playerStrength * 5;
                  if (currentBossHp <= 0) {
                    onVictory();
                    Navigator.pop(context);
                  }
                });
              },
              child: Text('Attack with Training'),
            )
          ],
        ),
      );
    },
  ),
);

} }

